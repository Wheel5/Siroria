<GuiXml>
	<Controls>
		<TopLevelControl name="SiroriaFrame" mouseEnabled="false" movable="false" hidden="false" clampedToScreen="true" >
			<Dimensions x="100" y="50" />
			<Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />
			
			<OnMoveStop>
				Siroria.savePos()
			</OnMoveStop>

			<Controls>
				<Label name="$(parent)Time" text="0.0" color="00FF00" inheritAlpha="true" font="$(CHAT_FONT)|$(KB_48)|soft-shadow-thick" verticalAlignment="TOP" horizontalAlignment="RIGHT" >
					<AnchorFill />
				</Label>
				<Label name="$(parent)Stacks" text="0" color="FFAA00" inheritAlpha="true" font="$(CHAT_FONT)|$(KB_24)|soft-shadow-thick" verticalAlignment="TOP" horizontalAlignment="LEFT" >
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Time" offsetX="10" offsetY="5" />
				</Label>
				<Label name="$(parent)StackTime" text="0" color="00FF00" inheritAlpha="true" font="$(CHAT_FONT)|$(KB_24)|soft-shadow-thick" verticalAlignment="TOP" horizontalAlignment="LEFT" >
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)Stacks" offsetY="-5" />
				</Label>
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
